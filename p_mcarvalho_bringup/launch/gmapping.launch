<launch>
    <!--Bloco 1: argumentos do launch file.-->
    <arg name="player_name" default="ggreen1"/>

    <group ns="$(arg player_name)">
        <node pkg="gmapping" type="slam_gmapping" name="gmapping" output="screen">
            <remap from="scan" to="/$(arg player_name)/scan"/>
            <param name="odom_frame" value="/$(arg player_name)/odom"/>
            <param name="map_frame" value="/$(arg player_name)/map"/>
            <param name="base_frame" value="/$(arg player_name)/base"/>
        </node>
    </group>
</launch>